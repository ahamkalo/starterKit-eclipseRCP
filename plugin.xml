<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.starterkit.todo.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.starterkit.todo.Perspective"
            id="com.starterkit.todo.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="TODOs"
            class="com.starterkit.views.TodosView"
            id="com.starterkit.todo.todosView">
      </view>
      <view
            class="com.starterkit.views.ArchiveView"
            id="com.starterkit.todo.archiveView"
            name="Archive">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.todo.perspective">
         <view
               id="com.starterkit.todo.todosView"
               minimized="false"
               ratio="0.7"
               relationship="left"
               relative="com.starterkit.todo.archiveView">
         </view>
         <view
               id="com.starterkit.todo.archiveView"
               minimized="false"
               relationship="right"
               relative="com.starterkit.todo.todosView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.starterkit.todo.todosView">
         <command
               commandId="com.starterkit.todo.modifySelected"
               label="Modify Task"
               style="push">
         </command>
         <command
               commandId="com.starterkit.todo.addToArchiveSelected"
               label="Add to archive"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.starterkit.handlers.ModifySelected"
            commandId="com.starterkit.todo.modifySelected">
      </handler>
      <handler
            class="com.starterkit.handlers.AddToArchiveSelected"
            commandId="com.starterkit.todo.addToArchiveSelected">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.starterkit.todo.modifySelected"
            name="Modify">
      </command>
      <command
            id="com.starterkit.todo.addToArchiveSelected"
            name="Add to archive">
      </command>
   </extension>

</plugin>
